<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/view_navigator_items_ripple">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/view_navigator_items_background_color" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/view_navigator_items_selected_background_color" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/view_navigator_items_background_color" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>